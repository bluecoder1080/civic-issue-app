# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Backend Environment Variables
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/civic-issues
PORT=5000

# File Upload Configuration
UPLOAD_DIR=uploads

# Cloudinary Configuration (for image storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Geocoding API Keys (Optional - for enhanced location services)
# OpenCage Geocoding API (for more accurate reverse geocoding)
OPENCAGE_API_KEY=your_opencage_api_key_here
# Google Maps API (alternative geocoding service)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Frontend Environment Variables (for Vite)
# Note: Vite requires VITE_ prefix for client-side variables
VITE_BACKEND_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api

# Frontend Geocoding Keys (if needed on client-side)
VITE_OPENCAGE_API_KEY=your_opencage_api_key_here
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Production URLs (uncomment and update for deployment)
# VITE_BACKEND_URL=https://your-app-name.vercel.app
# VITE_API_BASE_URL=https://your-app-name.vercel.app/api

# Development vs Production
NODE_ENV=development
